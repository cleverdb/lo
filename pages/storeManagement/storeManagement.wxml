<view class='store_management_warp'>
    <view class="one_top_wrap {{showData ? 'all_data_wrap' : 'show_data_wrap'}}">
        <view class='date-show'>
            <view class="date-content">{{year}}年{{month}}月</view>
            <view class='data-today'>
                今
            </view>
        </view>
        <view class="date-br">
            <view class='header'>
            <view wx:for='{{date}}' wx:key='index'>{{item}}</view>
            </view>
            <view class='date-box'>
            <view wx:for='{{dateArr}}' class='{{isToday == item.isToday ? "nowDay" : ""}} {{selectedDay == item.isToday ? "selectedDay" : ""}}' wx:key='index' data-date='{{item.isToday}}' bindtap='dateTap'>
                <view class='date-head'>
                <view>{{item.dateNum}}</view>
                </view>
            </view>
            </view>
        </view>
        <view class="date-show-footer" bindtap="showDataTap">
            <view class="footer-view">
                <image class="" src="{{ !showData ?'/images/icon/arrow-bottom.png':'/images/icon/arrow-top.png'}}" mode="aspectFit" />
            </view>
        </view>
    </view>
    <view class='store_management_line'></view>
    <view class='store_management_list_warp'>
        <view class='store_list_title'>
            今日到期会员
        </view>
        <view class='list_warp'>
            <view class='list_item'>
                <view class='list_item_image'>
                    <image class="" src="/images/test2.png" mode="aspectFill" lazy-load="false" binderror="" bindload="" />
                </view>
                <view class='list_item_center'>
                    <view class='item_center_top'>
                        <view class='top_one'>
                            V 张萌
                        </view>
                        <view class='top_two'>
                            乐城店半年卡
                        </view>
                    </view>
                    <view class='top_two'>
                        12.28(6天前)进店
                    </view>
                </view>
                <view class="list_iten_image">
                    <image  src="/images/icon/mine_reserve_tall.png" mode="aspectFill" lazy-load="false" binderror="" bindload="" />
                </view>
            </view>
        </view>
    </view>
    <view class='store_management_line'></view>  
    <view class='store_management_list_warp'>
        <view class='store_list_title'>
            今日进店会员
        </view>
        <view class='list_warp'>
            <view class='list_item'>
                <view class='list_item_image'>
                    <image class="" src="/images/test2.png" mode="aspectFill" lazy-load="false" binderror="" bindload="" />
                </view>
                <view class='list_item_center'>
                    <view class='item_today_top'>
                        <view class='top_one'>
                            V 张萌
                        </view>
                        <view class='top_two'>
                            乐城店半年卡
                        </view>
                    </view>
                    <view class='item_today_top'>
                        <view class='top_two'>
                            12:00-未离店
                        </view>
                        <view class='top_two'>
                            剩余：320天
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>  
</view>
  
