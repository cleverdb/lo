/* pages/privateCourses/privateCourses.wxss */
page{
  height: 100%;
}
.container{
  min-height:100vh;
  background-color: #EEEFEF;
}
.course{
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-top: 30rpx;
  border-radius: 5rpx;
  overflow: hidden;
  box-sizing: border-box;

  /* padding: 29rpx 0 29rpx 29rpx; */
}
.courseNavPic_div{
  height: 252rpx;
  overflow: hidden;
}
.course2{
  display: flex;
  padding: 0 30rpx;
  overflow: hidden;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-top: 20rpx;
}
.course2_item{
  width: 336rpx;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}
.course_img{
  display: block;
  width: 100%;
  /* height: 100%; */
  /* padding:; */
}
.course2_item_div{
  width: 336rpx;
  height: 252rpx;
  overflow: hidden;
}
.footer_bar{
  background-color: white;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  align-items:center;
  padding-left: 15rpx;
  padding-right: 17rpx;
  padding-top:20rpx;
  padding-bottom:20rpx;
}
.course_name{
 font-size:28rpx;
}

.tag{
  line-height:inherit;
  padding:2rpx 13rpx;
  background-color: white;
  color: #D3D3D4;
  display: inline-block;
  margin: 0;
  font-size: 20rpx;
  margin-left: 19rpx;
}
._course_list{
    display: flex;
}
