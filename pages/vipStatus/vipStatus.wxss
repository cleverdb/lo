/* pages/vipStatus/vipStatus.wxss */
page{
    height: 100%;
}
.vip_status_page_warp{
    height: 100%;
    background: #ffffff;
    display: flex;
    flex-direction: column;
}
.vip_status_top{
    width: 100%;
    height: 200rpx;
    color:rgba(114,113,113,1);
    font-size: 20rpx;
    display: flex;
    justify-content: space-around;
}
.vip_status_item{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.vip_status_line{
    height: 20rpx;
    background: #F0EDF1;
    width: 100%ï¼›
}
.vip_status_item{
    font-size: 58rpx;
}
.vip_text{
    font-size: 20rpx;
}
.vip_active{
    color: #3E3A39;
}
.vip_list_warp{
    padding: 0 30rpx;
}
.vip_list_title{
    padding: 22rpx 0;
    font-size: 26rpx;
    color:rgba(62,58,57,1);
    border-bottom: 1px solid #ECECEC;
}
.vip_list_item{
    display: flex;
    justify-content: space-around;
    align-items: center;
    padding-top: 40rpx;
    padding-bottom: 26rpx;
    border-bottom: 1px solid #ECECEC;
}
.list_item_img{
    width: 101rpx;
    height: 101rpx;
    border-radius: 50%;
}
.list_item_img image {
    width: 101rpx;
    height: 101rpx;
    border-radius: 50%;
}
.list_item_center{
    flex: 1;
    font-size: 26rpx;
    padding-left: 20rpx;
}
.list_right_img{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
}
.list_right_img image{
    width: 45rpx;
    height: 58rpx;
}
.item_style{
    display: flex;
    color:rgba(159,160,160,1);
    font-size: 26rpx;
    align-items: center;
}
.item_style_img{
    width: 34rpx;
    height: 31rpx;
    margin-right: 10rpx;
}
.item_small{
    font-size: 24rpx;
    color: rgba(159,160,160,1);

}
.item_name{
    color:rgba(62,58,57,1);
    font-size: 28rpx;
    margin-right: 20rpx;
}
.vip_close{
    color:rgba(231,53,95,1);
    font-size: 24rpx;
    margin-top: 35rpx;
}
.vip_no_data{
    flex:1;
}