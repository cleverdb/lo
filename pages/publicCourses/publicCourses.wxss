/* pages/publicCourses/publicCourses.wxss */
.container{
    min-height: 100vh;
    background-color: #ffffff;
}
.normal_border{
    flex:1;
    display: flex;
    justify-content: center;
    align-items: center;
    border-bottom:1rpx solid #D2D3D3;
}
.besel_border{
    border-bottom:4rpx solid #FCC800 ;
}
.tabs_container{
display: flex;  
height:90rpx;
}
.tabs_container text{
    font-weight: 400;
    font-size: 24rpx;
}
.list_item_container {
    display: flex;
    flex-direction:column;
}
.list_item_container image{
 width: 100%;
 height:251rpx;
 border-radius:10rpx;
 margin-bottom:23rpx;
    /* flex:1; */
}
.list_item_container view{
    line-height: 1;
}
.list_item_container>view:nth-child(2){
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin-bottom: 4rpx;
}
.list_item_container>view:nth-child(2) text{
    font-size: 30rpx;
}
.list_item_container>view:nth-child(3){

}
.list_item_container>view:nth-child(3) text{
    font-size: 24rpx;
}
.list_item_container>view:nth-child(4) text{
   font-size: 24rpx;
}
.main_container{
    padding:30rpx;
}
    