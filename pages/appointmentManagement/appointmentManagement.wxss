page{
  /* background: #EEEEEE; */
  background: #ffffff;
}
.appoint_management_list_warp{
  padding-bottom: 110rpx;
}
.appoint_management_list_item{
    display: flex;
    justify-content: space-between;
    padding: 24rpx 30rpx;
    border-bottom: 1px solid #ECECEC;
    background: #ffffff;
}
.list_item_img{
    width: 101rpx;
    height: 101rpx;
    border-radius: 50%;
}
.list_item_img image {
    width: 101rpx;
    height: 101rpx;
    border-radius: 50%;
}
.appoint_management_right_warp{
    margin-left: 20rpx;
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.appoint_management_right{
    display: flex;
    justify-content: space-between;
    font-size:28rpx;
}
.appoint_management_text_name{
    color: #3E3A39;
    font-size:28rpx;
}
.appoint_management_store_type{
    padding: 6rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #ffffff;
    background: #DE3B60;
    font-size: 20rpx;
}
.appoint_management_time{
    color: #3E3A39;
    font-size: 28rpx;
}
.appoint_management_class{
    color: #3E3A39;
    font-size:20rpx;
}
.line{
  height: 20rpx;
  background: #EEEEEE;
}
.appoint_management_t{
  margin-right: 20rpx;
}
.appoint_management_footer{
  position: fixed;
  height: 110rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  bottom: 0;
  background: #ffffff;
  border-top: 1px solid #EEEEEE;
}
.management_footer{
  width: 47rpx;
  font-size: 22rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.management_footer image{
  width: 47rpx;
  height: 40rpx;
}


/*
* 以下是 日历的样式
**/
.date-show {
  position: relative;
  font-size: 34rpx;
  color: #090000;
  text-align: center;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 0 30rpx;
}
.data-today{
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    border: 1px solid #E0DDE0;
    color: #E0DDE0;
}
.date-br {
  background-color: #ffffff;
}

.header {
  font-size: 0;
  width: 100%;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  
}

.header>view {
  display: inline-block;
  width: 14.285%;
  color: #090000;
  font-size: 28rpx;
  text-align: center;
  color: #9E9F9F;
  /* border-bottom: 1px solid #666; */
  padding: 20rpx 0;
}

.weekMark {
  position: relative;
}

.weekMark view {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  /* border-bottom: 1px solid #F2873B; */
}

.date-box {
  font-size: 0;
  padding: 10rpx 0;
  color: #090000;
}

.date-box>view {
  position: relative;
  display: inline-block;
  width: 14.285%;
  font-size: 34rpx;
  text-align: center;
  vertical-align: middle;
  margin: 10rpx 0;
}

.date-head {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
}

.nowDay .date-head {
  width: 60rpx;
  text-align: center;
  border-radius: 50%;
  background-color: #a0a0a0;
  margin: 0 auto;
}
.selectedDay .date-head {
  width: 60rpx;
  text-align: center;
  border-radius: 50%;
  background-color: #fcc700;
  margin: 0 auto;
}
.show_data_wrap{
  height: 280rpx;
  overflow: hidden;
}
.one_top_wrap{
  padding-top: 10px;
  background: #ffffff;
  position: relative;
  margin-bottom: 20rpx;
}
.all_data_wrap{
  padding-bottom: 20rpx;
}
.date-show-footer{
  position: absolute;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  background: #ffffff;

}
.footer-view{
  width: 30rpx;
  height: 34rpx;
}
.footer-view image{
  width: 100%;
  height: 100%;
}
