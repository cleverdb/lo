/* pages/privateCoursesBuy2/privateCoursesBuy2.wxss *//* pages/privateCoursesBuy/privateCoursesBuy.wxss */
page{
   height: 100%;
}
.try_course_container{
    /* height: 100vh; */
    background-color: #ffffff;
    padding-bottom: 112rpx;
}
.icon_down{
    margin-left: 20rpx;
    width: 26rpx;
    height: 16rpx;
}
.buy_button{
    display: flex;
    justify-content: center;
    align-items: center;
    background-color:#FCC800;
    height:110rpx;
    border-radius:0;
    font-size: 30rpx;
    color: #3F3B3A;
    position: fixed;
    bottom: 0;
    width: 100%;
}
.content{
    padding-left: 30rpx;
    padding-right: 30rpx;
}
.head{
    display: flex;
    /* height: 401rpx; */
}
.head image{
    height:401rpx;
    flex: 1;
}
.content_item{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding-top:40rpx;
    padding-bottom:40rpx;
    border-bottom: 1rpx  solid #E4E5E5;
}
.content_item_contents{
     display: flex;
    flex-direction: row;
    align-items: center;
}
.content_item text{
    font-size: 27rpx;
    font-weight:400;
    color:rgba(0,0,0,1);
}
.color_red text{
    color: #E7355E;
}
.color_gary text{
     color:  #9E9F9F;
}
.notic text{
 font-size: 20rpx;
 color:#727272;

}
.notice{
    margin-top: 30rpx;
}
.notice text{
   
    color: #3F3B3A;
}
.read{
    margin-top: 40rpx;
    margin-bottom: 40rpx;
    padding-left:0 ;
    display: flex;
    align-items: center;
}
radio .wx-radio-input{
height: 22rpx;
width: 22rpx;
}
.read radio{
    display: flex;
    justify-content: center;
    align-items: center;
}
.read text{
    font-size: 22rpx;
    color: #3F3B3A;
}
.content_item .hot{
    margin-top: 2rpx;
    margin: 0 15rpx;
    margin-top: -5rpx;
    /* font-size: 13px !important; */
    padding: 5rpx 6rpx 6rpx 8rpx;
    font-size: 14rpx;
    background-color: #FCC800;
}
.read .toEnsure{
   color: #43B9AA;
}
.teachersListCantainer{
    padding: 20rpx 30rpx 0;
    background-color: #EFEFEF;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}
.teacherslist_item{
    position: relative;
    display: inline-block;
    width: 336rpx;
    box-sizing: border-box;
    border-radius: 10rpx;
    margin-bottom: 20rpx;
   

}
.course_img{ 
  height:253rpx;
  width: 336rpx;
  background: #DCDDDD;
  overflow: hidden;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  /* padding:; */
}
.course_no_img{
    display: flex;
  justify-content: center;
  align-items: center;
}
.course_img image{
    width: 100%;
}
.footer_bar{
  background-color: white;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  align-items:center;
  padding-left: 15rpx;
  padding-right: 17rpx;
  padding-top:20rpx;
  padding-bottom:20rpx;

}
.tag{
  line-height:inherit;
  padding:2rpx 13rpx;
  background-color: white;
  color: #A7A7A8;
  display: inline-block;
  margin: 0;
  font-size: 20rpx;
  margin-left: 10rpx;
}
.course_name{
  font-size: 30rpx;
}
.course_name_right{
    display: flex;
}
.topborder{
    border-top: 1rpx  solid #E4E5E5;
}
.bordernone{
    border:none;
}
.besel_icon{
    width:68rpx;
    height:68rpx;
    position: absolute;
    right: 0;
    top: 0;
}
.numContainer{
    display: flex;
    border: 1rpx solid #B5B6B6;
    border-radius:4rpx;
    overflow: hidden;
}
.numContainer text{
    font-size:30rpx;
    
}
.numleft,.numright,.numcontent {
    width:74rpx;
    height:59rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.numright{
    background-color:#FCC800;
}
.numleft,.numright{
   border: none;

}
.numcontent{
    border-left: 1rpx solid #B5B6B6;
    border-right: 1rpx solid #B5B6B6;
}
.footer{
    position: fixed;
    width: 100%;
    bottom: 0;
}

