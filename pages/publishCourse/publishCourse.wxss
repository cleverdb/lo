/* pages/publishCourse/publishCoures.wxss */
.publish_warp{
    height: 100%;
    position: relative;
}
.publish_tab{
    width: 50%;
}
.container-hd {
  height: 400rpx;
  width: 100%;
}

.container-hd swiper {
  height: 100%;
  width: 100%;
}

swiper  image{
  height: 100%;
  width: 100%;
  display: inline-block;
  overflow: hidden;
}
.class_warp{
    display: flex;
    flex-wrap: wrap;
    padding-left: 30rpx;
    padding-top: 30rpx;
}
.class_item{
    padding: 30rpx 60rpx;
    margin-right: 10rpx;
    margin-bottom: 10rpx;
    color:rgba(114,113,113,1);
    font-size: 32rpx;
    border: 1px solid #D0D0D0;
    border-radius: 4rpx;
}
.active{
    color: #FCC800;
    border: 1px solid #FCC800;
}
.publish_footer{
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    background: #FCC800;
    color:rgba(62,58,57,1);
    height: 110rpx;
    font-size: 32rpx;
    position: fixed;
    bottom: 0;
}
.publish_input{
    color:rgba(62,58,57,1);
    font-size: 26rpx;
    width: 100%;
}
.list_input{
    color: #E7355F !important;
}
.list_warp{
    padding-bottom: 120rpx;
}
.mine_chagne_sel{
  display: flex;
  justify-content: space-between;
  width: 100%;
  color: #3E3A39;
}

.list_item{
    height: 104rpx;
    display: flex;
    align-items: center;
    border-top: 1px solid #D0D0D0;
    border-bottom: 1px solid #D0D0D0;
}
.mine_picker{
    padding-left: 10rpx;
}
.class_manage{
    padding-left: 30rpx;
}
.publish_swipe_item{
    height: 190rpx;
    border-bottom: 1px solid #D0D0D0;
    display: flex;
    justify-content: space-between;
    padding: 30rpx 0;
}
.publish_swipe_left{
    width: 220rpx;
    height: 190rpx;
    border-radius: 4rpx;
    overflow: hidden;
}
.publish_swipe_left image{
   width: 100%;
   height: 100%;
}
.publish_swipe_right{
    flex:1;
    display: flex;
    height: 100%;
    flex-direction: column;
    justify-content: space-between;
    padding-right: 30rpx;
    padding-left: 30rpx;
}
.publish_flex{
    display: flex;
    justify-content: space-between;
}
.right_bottom{
    display: flex;
    justify-content: space-between;
    color: #9FA0A0;
    font-size: 20rpx;
}
.publish_name{
    color: #3E3A39;
    font-size: 36rpxl
}
.publish_num{
    color: #E7355F;
    font-size: 32rpx;
}
.name_warp{
  color: #9FA0A0;
  font-size: 20rpx;  
}
.person_name{
    font-size: 28rpx;
}