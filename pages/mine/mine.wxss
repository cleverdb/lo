/* pages/mine/mine.wxss */

page {
  height: 100%;
}

.container {
  width: 100%;
  background-color: #F0EDF1;
  display: block;
}
.mine_top{
  height: 261rpx;
  background: #ffffff;
  display: flex;
  padding: 0 30rpx;
  align-items: center;
}
.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius:50%;
  margin-right: 27rpx;
}
.avatar image {
  width: 200rpx;
  height: 200rpx;
  border-radius:50%;
}
.mine_right_top{
  margin-bottom: 89rpx;
  color:rgba(62,58,57,1);
  display: flex;
  justify-content: space-between;
  font-size:36rpx;
  align-items: center;
}
.mine_right{
  width: 100%;
}
.mine_right_two{
  font-size: 26rpx;
}
.mine_right_bottom{
  font-size:24rpx;
  color:rgba(114,113,113,1);
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.mine_center{
  margin: 20rpx 0;
  width: 100%;
  height: 98rpx;
  background: #ffffff;
  display: flex;
  padding: 40rpx 0 30rpx 30rpx;

}
.center_left{
  display: flex;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(62,58,57,1);
  align-items: center;
  width: 150rpx;
  flex-shrink: 0;
  justify-content: center;
  position: relative;
}
.center_left_position{
  position: absolute;
  left: 0;
  top:70rpx;
  width: 118rpx;
  height: 160rpx;
  padding: 0 16px;
  background: #5B585C;
  border-radius: 4rpx;
  z-index: 1;
}
.center_position_top{
  font-size:20rpx;
  color:rgba(255,255,255,1);
  padding: 27rpx 0;
  text-align: center;
}
.line{
  width: 100%;
  height: 1px;
  background: #ffffff;
}
.center_right{
  display: flex;
  justify-content: space-around;
  flex: 1;
}
.center_right_item{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  height: 100%;
}
.center_text{
  font-size:20rpx;
  font-weight:500;
  color:rgba(114,113,113,1);
}

.mine_footer{
  background: #ffffff;
}
.mine_list{
  display: flex;
  align-items: center;
  height: 70rpx;
}
.mine_img{
  width: 40rpx;
  height: 40rpx;
  margin-right: 30rpx;
}
.mine_list_last{
  display: flex;
  height: 70rpx;
  justify-content: space-between;
  align-items: center;
}
.mine_list_top{
  display: flex;
}