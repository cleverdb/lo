/* pages/mine/mine.wxss */
@import '../template/pageAlert/pageAlert.wxss';
page {
  height: 100%;
}

.container {
  width: 100%;
  background: #ffffff;
  display: block;
}

.container-hd {
  width: 100%;
  height: 375rpx;
  display: flex;
  padding: 0 30rpx;
  box-sizing: border-box;
  flex-direction: row;
  align-items: center;
  background-color: #ffffff;
  justify-content: space-between;
}

.container-hd_bd {
  width: 300rpx;
  margin-left: 50rpx;
}

.container-hd_bd .cell {
  line-height: 50rpx;
}

.container-hd_bd .cell.name {
  color: #fcc700;
  font-size: 34rpx;
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;

}
.show_edit{
  display: flex;
  height: 100%;
  align-items: center;
}
.show_edit image{
  width: 23rpx;
  height: 32rpx;
  margin-left: 20rpx;
  color: #fcc700;
}
.container-hd_bd button {
  background-color:#fcc700;
  width: 180rpx;
  font-size: 24rpx;
}
.container-line{
  height: 40rpx;
  background: #EEEFEF;
}
.container-hd_bd .cell.id {
  color: #AEAEAF;
  font-size: 24rpx;
}

.container-hd_ft .cell {
  background-color: #fcc700;
  text-align: center;
  font-size: 28rpx;
  margin: 50rpx 0;
  width: 170rpx;
  border-radius: 6rpx;
}

.avatar {
  margin: 0 auto;
  text-align: center;
}

.avatar image {
  width: 200rpx;
  height: 200rpx;
  border-radius:50%;
}

.info .text {
  text-align: center;
  color: #ccc;
  font-size: 26rpx;
}

.container-bd {
  width: 100%;

}

.menu {
  padding: 24rpx 30rpx;
  display: flex;
  flex-direction: row;
  line-height: 0.5;
  font-size: 30rpx;
  color: #090000;
  background-color: #fff;
  border-bottom: 2rpx solid #f6f6f6;
}

.menu .menu-row {
  width: 100%;
  display: flex;
  flex-direction: row;
}

.menu .menu-cell {
  height: 100%;
  align-items: center;
}

.menu-cell text {
  font-size: 28rpx;
  vertical-align: middle;
}

.menu image {
  margin-right: 10rpx;
  vertical-align: middle;
  width: 50rpx;
  height: 50rpx;
}

.menu .menu-cell {
  height: 100%;
  align-items: center;
}

.menu .arrow {
  padding-right: 26rpx;
  position: relative;
}

.menu .arrow::after {
  content: " ";
  display: inline-block;
  height: 12rpx;
  width: 12rpx;
  border-width: 4rpx 4rpx 0 0;
  border-color: #3e3e3e;
  border-style: solid;
  -webkit-transform: matrix(0.71, 0.71, -.71, 0.71, 0, 0);
  transform: matrix(0.71, 0.71, -.71, 0.71, 0, 0);
  /* position: relative; */
  top: -4rpx;
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 4rpx;
}
.back{
    background:rgba(0,0,0,0.3);
    position: fixed;
    width: 100%;
    height: 100%;
    z-index: 10;
    top: 0;
    left: 0;
    display: flex;
    justify-content: center;
}
.modal {
    z-index: 111;
    position: relative;
    top:20%;
    opacity: 1;
    width: 540rpx;
    height: 570rpx;
}
.modal_top{
  width: 519rpx;
  position: relative;
}
.modal image{
    width: 100%;
    height: 100%;
}
.modal-button{
  width: 214rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  bottom: 48rpx;
  left:164rpx;
  font-size:32rpx;
}