/* pages/mine/mine.wxss */

page {
  height: 100%;
  width: 100%;
  background-color: #191a19;
}
.contaier{
  width: 100%;
}

.info {
  background: #efefef;
  padding: 25px 0;
  width: 100%;
}

.info .avatar {
  margin: 0 auto;
  text-align: center;
}

.info .avatar image {
  width: 200rpx;
  height: 200rpx;
}

.info .text {
  text-align: center;
  color: #000;
  font-size: 26rpx;
}

.menu-panel {
  height: auto;
  width: 100%;
  border-top: 2rpx solid #666;
}

.menu {
  padding: 24rpx 30rpx;
  display: flex;
  flex-direction: row;
  line-height: 0.5;
  font-size: 28rpx;
  color: #ccc;
  font-weight: 700;
  border-bottom: 2rpx solid #666;
}

.menu .menu-row {
  width: 100%;
  display: flex;
  flex-direction: row;
}

.menu .menu-cell {
  height: 100%;
  align-items: center;
}

.menu-cell text {
  font-size: 28rpx;
  vertical-align: middle;
}

.menu image {
  margin-right: 5px;
  vertical-align: middle;
  width: 50rpx;
  height: 50rpx;
}

.menu .menu-cell {
  height: 100%;
  align-items: center;
}

.menu .arrow {
  padding-right: 13px;
  position: relative;
}

.menu .arrow::after {
  content: " ";
  position: absolute;
  top: 50%;
  right: 4rpx;
  border-width: 4rpx 4rpx 0 0;
  border-color: #c8c8c8;
  border-style: solid;
  height: 16rpx;
  width: 16rpx;
  transform: translateY(-50%) matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
}

.login {
  font-size: 22rpx;
  background-color: #F2873B; 
  /* color: #F2873B; */
  width: 120rpx;
  border:1rpx solid #f2873b;
  color: #fff;
}

.bind-account{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 22rpx;
  width: 100%;
  align-items: center;
}
.bind-account-bd{
  color: #F2873B;
  margin-left: 50rpx;
}
.bind-account-ft{
  margin: 20rpx;
}
.bind-account-ft .phoneBtn{
  font-size: 22rpx;
  border: 1rpx solid #F2873B;
  background-color: #F2873B; 
  /* color: #F2873B; */
  color: #fff;
}
