/* pages/mine/mine.wxss */

page {
  height: 100%;
}

.container {
  width: 100%;
  background-color: #f6f6f6;
  display: block;
}

.container-hd {
  width: 100%;
  height: 375rpx;
  display: flex;
  padding: 0 30rpx;
  box-sizing: border-box;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background-color: #3e3e3e;
}

.container-hd_bd {
  width: 300rpx;
  margin-left: 50rpx;
}

.container-hd_bd .cell {
  line-height: 50rpx;
}

.container-hd_bd .cell.name {
  color: #fcc700;
  font-size: 34rpx;
}

.container-hd_bd button {
  background-color:#fcc700;
  width: 180rpx;
  font-size: 24rpx;
}

.container-hd_bd .cell.id {
  color: #f6f6f6;
  font-size: 24rpx;
}

.container-hd_ft .cell {
  background-color: #fcc700;
  text-align: center;
  font-size: 28rpx;
  margin: 50rpx 0;
  width: 170rpx;
  border-radius: 6rpx;
}

.avatar {
  margin: 0 auto;
  text-align: center;
}

.avatar image {
  width: 200rpx;
  height: 200rpx;
  border-radius:50%;
}

.info .text {
  text-align: center;
  color: #ccc;
  font-size: 26rpx;
}

.container-bd {
  width: 100%;
}

.container-ft {
  margin-top: 20rpx;
  width: 100%;
}

.menu {
  padding: 24rpx 30rpx;
  display: flex;
  flex-direction: row;
  line-height: 0.5;
  font-size: 30rpx;
  color: #090000;
  background-color: #fff;
  border-bottom: 2rpx solid #f6f6f6;
}

.menu .menu-row {
  width: 100%;
  display: flex;
  flex-direction: row;
}

.menu .menu-cell {
  height: 100%;
  align-items: center;
}

.menu-cell text {
  font-size: 28rpx;
  vertical-align: middle;
}

.menu image {
  margin-right: 10rpx;
  vertical-align: middle;
  width: 50rpx;
  height: 50rpx;
}

.menu .menu-cell {
  height: 100%;
  align-items: center;
}

.menu .arrow {
  padding-right: 26rpx;
  position: relative;
}

.menu .arrow::after {
  content: " ";
  display: inline-block;
  height: 12rpx;
  width: 12rpx;
  border-width: 4rpx 4rpx 0 0;
  border-color: #3e3e3e;
  border-style: solid;
  -webkit-transform: matrix(0.71, 0.71, -.71, 0.71, 0, 0);
  transform: matrix(0.71, 0.71, -.71, 0.71, 0, 0);
  /* position: relative; */
  top: -4rpx;
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 4rpx;
}
