page{
  background-color:#EEEFEF;
  height: 100%;
}
/*添加新用户，最外层容器 */
.nca_container{
  width: 100%;
  height: 100%;
  background-color: #ffffff;
  font-size: 28rpx;
  color: #3E3A39;
  font-family: PingFang-SC-Medium;
  display: flex;
  flex-direction: column;
}
.nca_line{
  width:cal(100%-58rpx);
  height: 0.3rpx;
  background-color: #EEEFEF;
  margin: 0 20rpx 0 20rpx;
}
.nca_block{
  width:100%;
  height:19rpx;
  background-color: #EEEFEF;
}
/*单选框条目*/
.nca_item1{
  width: 100%;
  height: 89rpx;
  display: flex;
  align-items: center;
  position: relative;
}
.nca_item1_0{
  position: absolute;
  left: 35rpx;
  font-size: 32rpx;
}
.nca_item1_1{
  position: absolute;
  right: 20rpx;
  font-size: 45rpx;
}
.nca_radio{
  transform:scale(0.7)
}

.nca_bottom_btn{
  position: absolute;
  bottom: 0rpx;
  width: 100%;
  height: auto;
}
.nca_i_btn{
  color: #3E3A39;
}

.nca_card_header{
flex-grow: 1;
background-color:#fff; 
}
.nca_card_content{
  width: 100%;
  height: cal(100%-37rpx);
  overflow: hidden;
}
.nca_card_content_textarea{
  width: cal(100%-70rpx);
  margin: 0rpx 35rpx;
  height: cal(100%-37rpx);
  overflow: auto;
}
/*遮挡层*/
.nca_shadow{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 99;
  display:flex;
  flex-direction: column;
  
}
.nca_shadow_item1{
  background: #000000;
  opacity: 0.5;
  flex-grow: 1;
}
.nca_shadow_item2{
  position: relative;
  height: 527rpx;
  background: #FFFEFF;
}
.nca_shadow_item2_text{
  font-size: 28rpx;
  margin: 30rpx 0 0 30rpx;
}
.nac_shadow_item2_btns{
  margin: 45rpx 0 0 0;
  height:57rpx;
  display: flex;
  justify-content: space-around;
}
.nca_bottom_btn{
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 111rpx;
}
.nca_i_btn{
  color: #3E3A39;
}
.nac_block_1{
  height: 55rpx;
  width: 198rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1rpx solid #EEEFEF;
  font-size: 26rpx;
}
.nac_active{
  color: #FCC800;
}