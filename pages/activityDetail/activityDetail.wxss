/* pages/activityDetail/activityDetail.wxss */
@import "/wxParse/wxParse.wxss";
.container {
  background-color: #191a19;
  min-height: 100%;
  justify-content:space-between;
  align-items: center;
  padding:20rpx 10rpx 120rpx 10rpx;
  display: inline-block
}

.container-hd{
    width: 100%;
}

.container-bd{
  width: 100%;
  min-height: 1000rpx;
  position: relative;
}
.content{
  font-size:28rpx;
  color:#fff;
  line-height: 56rpx;
  padding-bottom:20rpx;
  width:100%;
}

.content-text{
    font-size: 28rpx;
    color: #ccc;
    line-height: 42rpx;
    word-break: break-all;
    text-indent: 2em;
}

.act-img{
    width: 100%;
} 

.act-title{
    color: #f2873b;
    text-align:center;
} 
.container-ft{
    width: 100%;
}

.container-ft .name{
  font-size: 34rpx;
  color: #f2873b
}
.container-ft .value{
  color: #fff;
  font-size: 28rpx;
}
.my-map{
    width: 100%;
    height: 300rpx;
    margin-top: 20rpx;
   
}

.join-activity {
  width: 100%;
  color: #fff;
  position: fixed;
  height: 100rpx;
  bottom: 0;
  margin: 0;
  right: 0;
  background-color: #f2873b;
  justify-content: center;
  display: flex;
  align-items: center;
}