<!--pages/activity/activity.wxml-->
<!--pages/mineAppointment/mineAppointment.wxml-->
<view class="container">
  <!-- 导航栏 -->
  <view class="navbar">
    <block wx:for="{{statusType}}" wx:key="index">
      <view class="navbar-item {{navbarActiveIndex ==index ? 'navbar-item-active' : ''}}" data-navbar-index="{{index}}" bindtap="onNavBarTap">
        <text>{{item}}</text>
      </view>
    </block>
  </view>
  <swiper class="content-wrapper" style="height:{{winHeight}}rpx" duration="300" current="{{navbarActiveIndex}}" bindchange="onBindChange">
    <swiper-item wx:for="{{activityList}}" wx:key="index" wx:for-item="activitys">
      <scroll-view style="height:100%" scroll-y >
        <view class="activity" wx:if="{{activitys.length > 0}}" wx:for="{{activitys}}" wx:key="activityId" id="{{item.activityId}}" bindtap="goActivity" >
          <view  class="activity-hd">
            <image mode='scaleToFill' src="{{item.activityPhoto}}"></image>
          </view>
          <view  class="activity-bd">
            <view class="name">{{item.activityName}}</view>
            <view class="tag" wx:if="{{item.description}}">{{item.description}}</view>
            <view class="_date" wx:if="{{item.activityDate}}">
                <image src='/images/icon/date.png' mode='scaleToFill'/>
                 <text>{{item.activityDate}} </text>
            </view>
            <view class="address" wx:if="{{item.activitySotre}}" >
              <image src='/images/icon/address.png' mode='scaleToFill'/>
              <text>{{item.activitySotre}}</text>
            </view>
          </view>
        </view>
        <view class="no-activity" wx:if="{{activitys.length == 0}}" >
          <image src="/images/icon/yuyuekc.png" class="no-activity-img"></image>
          <view class="text">暂无活动~ ~</view>
        </view>
      </scroll-view>
    </swiper-item>
  </swiper>
</view>