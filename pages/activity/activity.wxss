/* pages/mineAppointment/mineAppointment.wxss */

page {
  background-color: #191a19;
}

.navbar {
  display: flex;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 500;
  width: 100%;
  height: 50px;
  flex-direction: row;
  text-align: center;
  color: #ccc;
  font-size: 15px;
  box-sizing: border-box;
  background-color: #191a19;
  border-bottom: 1rpx solid #666;
}

.navbar-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.navbar-item-active {
  transition: all 0.3s;
  border-bottom: 8rpx solid #f2873b;
  color: #f2873b;
}

.content-wrapper {
  position: absolute;
  bottom: 0;
  right: 0rpx;
  left: 0rpx;
  top: 100rpx;
}

.no-activity {
  width: 100%;
  text-align: center;
  padding-top: 200rpx;
}

.no-activity-img {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.no-activity .text {
  font-size: 28rpx;
  color: #999;
  text-align: center;
}

.activity {
  width: 100%;
  display: flex;
  flex-grow: row no-wrap;
  justify-content: space-between;
  box-sizing: border-box;
  height: 250rpx;
  align-items: center;
  border-bottom: 2rpx solid #666;
  padding: 0 20rpx 0 20rpx;
  word-break: break-all;
}

.activity-hd {
  /* border: 1rpx solid red; */
  width: 210rpx;
  height: 210rpx;
  position: relative;
  margin-right: 20rpx;
}

.activity-hd  image {
  width: 100%;
  height: 100%;
  /* border-radius:50%; */
}

.activity-bd {
  width: 570rpx;
  font-size: 22rpx;
  flex-grow: 2;
  color: #ccc;
  line-height: 1.5em;
}

.activity-bd .name {
  font-size: 28rpx;
  color: #f2873b;
  margin-bottom: 14rpx;
}

.activity-bd image {
  height: 30rpx;
  width: 30rpx;
  align-items: center;
}
.activity-bd .tag {
  height: 90rpx;
  width: 100%;
   overflow: hidden;
    text-overflow: ellipsis;
}
.activity-bd ._date {
  display: flex;
  flex-direction: row;
  margin-top:20rpx;
}

.activity-bd .address {
  display: flex;
  flex-direction: row;
}

.activity-bd text {
  margin-left: 10rpx;
}
