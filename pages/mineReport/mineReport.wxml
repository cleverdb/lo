        </view>
      </view>
    </view>
    <view class='nav-bottom'>
      <view class="nav-hd" bindtap='beforeTap'>
        <image src="/images/icon/arrow-left.png"></image>
        <view class='nav-label'>前一{{dataObj[choose]}}</view>
      </view>
      <view class='nav-ft' bindtap='nextTap'>
