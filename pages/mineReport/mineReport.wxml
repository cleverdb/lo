<!--pages/mineReport/mineReport.wxml-->
<view class='container'>
  <view class='container-hd'>
    <view class="nav-hd" bindtap='beforeTap'>
        <image src="/images/icon/arrow-left-ok.png"></image>
        <view class='nav-label'>前一天</view>
    </view>
    <view class="nav-bd">
       
        <canvas canvas-id="bgCanvas" id="bgCanvas" class='canvas'></canvas>
         <canvas canvas-id="stepCanvas" id="stepCanvas" class='canvas'></canvas>
        <canvas canvas-id="arcCanvas" id="arcCanvas" class='canvas'></canvas>
         <view class='bgCircle'>
          运动值
        </view>
    </view>
    <view class='nav-ft' bindtap='nextTap'>
        <view class='nav-label'>后一天</view>
        <image src="/images/icon/arrow-right-ok.png"></image>
    </view>
  </view>
  <view class='container-bd'>
      <view class="tr header">{{nowDate}}</view>
      <view class="tr">
        <view class="td label">运动排名</view>
        <view class="td value" wx:if='{{report.ranking ==1}}'><image src="/images/icon/1.png"></image></view>
        <view class="td value" wx:if='{{report.ranking ==2}}'><image src="/images/icon/2.png"></image></view>
        <view class="td value" wx:if='{{report.ranking ==3}}'><image src="/images/icon/3.png"></image></view>
        <view class="td value" wx:if='{{report.ranking > 3}}'><image class ="other" src="/images/icon/n.png"></image><view class="num">04</view></view>
        <view class="td value alert" wx:if='{{!report.ranking}}'>晚上11点更新</view>
      </view>
      <view class="tr">
        <view class="td label">运动时长</view>
        <view class="td value">{{report.howlong}}min</view>
      </view>
      <view class="tr noboder">
        <view class="td label">消耗热量</view>
        <view class="td value">{{report.calorie}}kcal</view>
      </view>
  </view>
  <view class="container-ft">
    <view class="tr header">健身记录</view>  
    <block wx:for="{{report.appointments}}" wx:key="{{index}}">
      <view class="cell">
        <view class="cell_hd">
          <view class='name'>{{item.appCourseName}}</view>
          <view class='badge'>{{item.coachName}}</view>
          <view class='badge'>{{item.storeName}}</view>
        </view>
        <view class="cell_bd">
          <view>{{item.howlong}}min</view>
          <view>{{item.calorie}}kcal</view>
          <view>{{item.strength}}</view>
        </view>
      </view>
    </block>
  </view>
</view>