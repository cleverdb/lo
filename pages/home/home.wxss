}
.store_select_wrap{
    display: flex;
    justify-content: space-between;
}
.picker{
  min-width: 100rpx;
  text-align: right;
  height: 50rpx;
  font-size: 28rpx;
  line-height: 50rpx;
}
.cell-ft {
  padding-right: 26rpx;
  position: relative;
}
.cell-ft::after {
  content: " ";
  display: inline-block;
  height: 12rpx;
  width: 12rpx;
  border-width: 4rpx 4rpx 0 0;
  border-color: #3e3e3e;
  border-style: solid;
  -webkit-transform: matrix(0.71, 0.71, -.71, 0.71, 0, 0);
  transform: matrix(0.71, 0.71, -.71, 0.71, 0, 0);
  /* position: relative; */
  top: -4rpx;
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 4rpx;
}
