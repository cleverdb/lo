/* pages/home/home.wxss */
@import '../template/pageAlert/pageAlert.wxss';
page {
  height: 100%;
  
}
.container_q {
 height: 100%;
 overflow: auto;
}


.container-hd {
  height: 30%;
  width: 100%;
}

.container-hd swiper {
  height: 100%;
  width: 100%;
}

swiper  image{
  height: 100%;
  width: 100%;
  display: inline-block;
  overflow: hidden;
}

.container-bd {
  height: 70%;
  width: 100%;
  display:flex;
  flex-direction:column;
  padding: 5rpx 20rpx;
  box-sizing: border-box;
  background-color:#f6f6f6;
}

.container-image{
  width: 100%;
  flex-grow: 1;
  margin: 5rpx 0;
  border-radius:10rpx;
  display: flex;
  background-color: #3e3e3e;
}

.container-image image{
  width:100%;
  height: auto
}

.bg-image {
  display: block;
  width: 100%;
  height: 100%;
  overflow-y: scroll
}

.buyMember {
  position: absolute;
  top: 50%;
  width: 100%;
  height: 15%;
  opacity: 0;
}

.buyCourse {
  position: absolute;
  top: 67%;
  width: 100%;
